@using Microsoft.AspNetCore.Identity
@using RemoteConnectionQueueApp.Areas.Identity.Data

@inject UserManager<AppUser> UserManager

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Bağlantı Listesi</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Connections" class="btn btn-info form-control text-white">
            Yeni Ekle
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%" data-user="@UserManager.GetUserName(User)">
            <thead>
                <tr>
                    <th>Müşteri Adı</th>
                    <th>Sunucu IP</th>
                    <th>Sunucu Kullanıcı Adı</th>
                    <th>Bağlı Kişi</th>
                    <th>Bağlantı Zamanı</th>
                    <th>Bağlı Süre(Dk)</th>
                    <th>Not</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/connectionList.js"></script>
}